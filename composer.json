{
    "name": "cape-and-bay/draftable",
    "description": "Laravel Drafts tool for models",
    "keywords": [
        "CapeAndBay",
        "draftable",
        "laravel packages",
        "drafts",
        "archive",
        "restore models"
    ],
    "homepage": "https://github.com/GymRevenue/draftable",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Mustafa Khaled",
            "email": "mustafakhaled.dev@gmail.com",
            "role": "Developer"
        },
        {
            "name": "Chrys Ugwu",
            "email": "chrys@capeandbay.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "orchestra/testbench": "^7.18",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "CapeAndBay\\Draftable\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CapeAndBay\\Draftable\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "CapeAndBay\\Draftable\\DraftableServiceProvider"
            ]
        }
    }
}
